<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/layout_primary_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:minHeight="60dp"
        app:elevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/ma_toolbar_title"
                style="@style/main_toolbar_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/app_name"
                android:textSize="@dimen/common_text_max"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ma_toolbar_subtitle"
                style="@style/main_toolbar_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_category"
                app:layout_constraintBottom_toBottomOf="@+id/ma_toolbar_title"
                app:layout_constraintStart_toEndOf="@+id/ma_toolbar_title" />

            <ImageButton
                android:id="@+id/ma_toolbar_search"
                style="@style/main_toolbar_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:contentDescription="@string/image"
                app:layout_constraintBottom_toBottomOf="@+id/ma_toolbar_more"
                app:layout_constraintEnd_toStartOf="@+id/ma_toolbar_more"
                app:layout_constraintTop_toTopOf="@+id/ma_toolbar_more"
                app:srcCompat="@drawable/ic_search_solid" />

            <ImageButton
                android:id="@+id/ma_toolbar_more"
                style="@style/main_toolbar_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:contentDescription="@string/image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_more_solid" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/ma_nav_buttons"
        style="@style/main_nav_view_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp"
        app:itemRippleColor="@android:color/transparent"
        app:itemTextAppearanceActive="@style/main_nav_view_text"
        app:itemTextAppearanceInactive="@style/main_nav_view_text"
        app:menu="@menu/main_nav_view" />

    <LinearLayout
        style="@style/up_rounded_layout_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/ma_nav_host"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:defaultNavHost="true"
            app:navGraph="@navigation/ma_nav_graph" />
    </LinearLayout>


</LinearLayout>