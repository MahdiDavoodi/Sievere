<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="?android:attr/selectableItemBackground">

    <androidx.cardview.widget.CardView
        android:id="@+id/tf_album_cv"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:elevation="10dp"
        android:maxWidth="200dp"
        android:maxHeight="200dp"
        android:minWidth="100dp"
        android:minHeight="100dp"
        android:padding="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="20dp"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2">

        <ImageView
            android:id="@+id/tf_album_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/cd_albumArt"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/pic_sample_music_art" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tf_album_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tf_album_cv"
        app:layout_constraintStart_toStartOf="@+id/tf_album_cv"
        app:layout_constraintTop_toBottomOf="@+id/tf_album_cv"
        tools:text="Album Name" />
</androidx.constraintlayout.widget.ConstraintLayout>