<resources xmlns:tools="http://schemas.android.com/tools">

    ------------------------ Dark Theme ------------------------

    <style name="Theme.Sievere" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorPrimaryVariant">@android:color/transparent</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_primary_light</item>
        <item name="colorSecondaryVariant">@color/dark_accent</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Default widgets styles and ... -->
        <item name="android:textViewStyle">@style/common_text</item>
        <item name="android:popupMenuStyle">@style/popup_menu_main_style</item>
    </style>

    ------------------------ Dark styles ------------------------
    <!--Seekbars-->
    <style name="seekbar_style_1">
        <item name="wave_progress_color">@color/dark_primary</item>
        <item name="wave_width">3dp</item>
        <item name="wave_min_height">4dp</item>
        <item name="wave_background_color">@color/dark_icons</item>
        <item name="wave_corner_radius">10dp</item>
        <item name="wave_gap">2dp</item>
        <item name="wave_gravity">center</item>
    </style>

    <!--indicators-->
    <style name="default_indicator">
        <item name="dotsColor">@color/dark_accent</item>
        <item name="selectedDotColor">@color/dark_primary</item>
        <item name="dotsSize">14dp</item>
        <item name="dotsCornerRadius">8dp</item>
        <item name="dotsSpacing">4dp</item>
        <item name="dotsWidthFactor">2.5</item>
        <item name="progressMode">true</item>
    </style>

    <!--icon-->
    <style name="common_icon" parent="images">
        <item name="android:background">?attr/actionBarItemBackground</item>
        <item name="android:tint">@color/dark_icons</item>
    </style>

    <style name="common_icon_style_1" parent="common_icon">
        <item name="android:tint">@color/dark_accent</item>
    </style>

    <style name="common_icon_style_2" parent="common_icon">
        <item name="android:tint">@color/dark_primary</item>
    </style>

    <!--popupMenu-->
    <style name="popup_menu_main_style" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/bg_rounded_dark</item>
        <item name="android:popupElevation">20dp</item>
    </style>

    <!--Views-->

    <style name="main_nav_view_style">
        <item name="itemIconTint">@color/main_nav_view_dark</item>
        <item name="itemTextColor">@color/main_nav_view_dark</item>
    </style>

    <!--Layouts-->

    <style name="layout_primary_bg">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="up_rounded_layout_bg">
        <item name="android:background">@drawable/bg_up_rounded_dark</item>
    </style>

    <style name="rounded_layout_bg">
        <item name="android:background">@drawable/bg_rounded_dark</item>
    </style>

    <style name="down_rounded_layout_bg">
        <item name="android:background">@drawable/bg_down_rounded_dark</item>
    </style>
    <!--Text Views-->

    <style name="big_text" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/archive</item>
        <item name="android:padding">@dimen/big_text_padding</item>
        <item name="android:textAlignment">center</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:textColor">@color/dark_primary_text</item>
        <item name="android:textSize">@dimen/big_text</item>
        <item name="autoSizeMaxTextSize">@dimen/big_text_max</item>
        <item name="autoSizeMinTextSize">@dimen/big_text_min</item>
    </style>

    <style name="big_text_style_1" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/archive</item>
        <item name="android:padding">@dimen/big_text_padding</item>
        <item name="android:textAlignment">center</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:textColor">@color/dark_primary_light</item>
        <item name="android:textSize">@dimen/big_text</item>
        <item name="autoSizeMaxTextSize">@dimen/big_text_max</item>
        <item name="autoSizeMinTextSize">@dimen/big_text_min</item>
    </style>

    <style name="common_text" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/way_regular</item>
        <item name="android:padding">@dimen/common_text_padding</item>
        <item name="android:textAlignment">center</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:textColor">@color/dark_secondary_text</item>
        <item name="android:textSize">@dimen/common_text</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="autoSizeMaxTextSize">@dimen/common_text_max</item>
        <item name="autoSizeMinTextSize">@dimen/common_text_min</item>
    </style>

    <style name="small_text" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/way_regular</item>
        <item name="android:padding">@dimen/small_text_padding</item>
        <item name="android:textAlignment">center</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:textColor">@color/dark_secondary_text</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="autoSizeMaxTextSize">@dimen/small_text_max</item>
        <item name="autoSizeMinTextSize">@dimen/small_text_min</item>
    </style>

    <style name="main_toolbar_text" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/archive</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:textColor">@color/dark_primary</item>
        <item name="android:textSize">@dimen/common_text</item>
    </style>
</resources>