<resources xmlns:tools="http://schemas.android.com/tools">

    ------------------------ Dark Theme ------------------------

    <style name="Theme.Sievere" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorPrimaryVariant">@android:color/transparent</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_primary_light</item>
        <item name="colorSecondaryVariant">@color/dark_accent</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Default widgets styles and ... -->
        <item name="android:textViewStyle">@style/text</item>
        <item name="android:popupMenuStyle">@style/popup_menu_main_style</item>
    </style>

    ------------------------ Dark styles ------------------------
    <!--Seekbars-->
    <style name="seekbar">
        <item name="wave_progress_color">@color/dark_primary</item>
        <item name="wave_width">3dp</item>
        <item name="wave_min_height">3dp</item>
        <item name="wave_background_color">@color/dark_accent</item>
        <item name="wave_corner_radius">20dp</item>
        <item name="wave_gap">2dp</item>
        <item name="wave_gravity">center</item>
    </style>

    <!--indicators-->
    <style name="default_indicator">
        <item name="dotsColor">@color/dark_accent</item>
        <item name="selectedDotColor">@color/dark_primary</item>
        <item name="dotsSize">14dp</item>
        <item name="dotsCornerRadius">8dp</item>
        <item name="dotsSpacing">4dp</item>
        <item name="dotsWidthFactor">2.5</item>
        <item name="progressMode">true</item>
    </style>

    <!--icon-->
    <style name="icon" parent="icons">
        <item name="android:tint">@color/dark_icons</item>
    </style>

    <style name="icon_v2" parent="icon" />

    <style name="icon_v3" parent="icons">
        <item name="android:tint">@color/dark_primary</item>
    </style>

    <!--popupMenu-->
    <style name="popup_menu_main_style" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/bg_rounded_dark</item>
        <item name="android:popupElevation">20dp</item>
    </style>

    <!--Views-->

    <style name="navigation_view">
        <item name="itemIconTint">@color/navigation_view_dark</item>
        <item name="itemTextColor">@color/navigation_view_dark</item>
    </style>

    <!--Layouts-->

    <style name="background">
        <item name="android:background">@color/dark_primary_light</item>
    </style>

    <style name="primary_background">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="primary_down_rounded_background">
        <item name="android:background">@drawable/bg_down_rounded_dark_primary</item>
    </style>

    <style name="up_rounded_background">
        <item name="android:background">@drawable/bg_up_rounded_dark</item>
    </style>

    <style name="rounded_background">
        <item name="android:background">@drawable/bg_rounded_dark</item>
    </style>

    <style name="down_rounded_background">
        <item name="android:background">@drawable/bg_down_rounded_dark</item>
    </style>

    <style name="np_card_background">
        <item name="android:background">@color/dark_primary</item>
    </style>
    <!--Text Views-->

    <style name="primary_text" parent="text">
        <item name="fontFamily">@font/archive</item>
        <item name="android:padding">@dimen/primary_text_padding</item>
        <item name="android:textColor">@color/dark_primary_text</item>
        <item name="android:textSize">@dimen/primary_text</item>
    </style>

    <style name="primary_text_v2" parent="primary_text" />

    <style name="primary_text_v3" parent="primary_text_v2">
        <item name="android:textColor">@color/dark_primary_light</item>
    </style>

    <style name="text" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/samsung_one_400</item>
        <item name="android:padding">@dimen/text_padding</item>
        <item name="android:textAlignment">center</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:textColor">@color/dark_secondary_text</item>
        <item name="android:textSize">@dimen/text</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="small_text" parent="text">
        <item name="android:padding">@dimen/small_text_padding</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="main_toolbar_text" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/archive</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:textColor">@color/dark_primary</item>
        <item name="android:textSize">@dimen/text</item>
    </style>
</resources>