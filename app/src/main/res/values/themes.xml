<resources xmlns:tools="http://schemas.android.com/tools">

    ------------------------ Light Theme ------------------------

    <style name="Theme.Sievere" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_light</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Default widgets styles and ... -->
        <item name="android:textViewStyle">@style/common_text</item>
    </style>

    ------------------------ Light styles ------------------------

    ---> Views.

    <style name="main_nav_view_style">
        <item name="itemIconTint">@color/main_nav_view_light</item>
        <item name="itemTextColor">@color/main_nav_view_light</item>
    </style>

    <!--<style name="main_divider_view">
        <item name="android:background">@color/divider</item>
    </style>-->

    ---> Toolbar.

    <style name="main_toolbar">
        <item name="iconTint">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="main_toolbar_text" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/archive</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/common_text</item>
    </style>
    ---> Layouts.

    <style name="layout_primary_bg">
        <item name="android:background">@color/primary</item>
    </style>

    <style name="up_rounded_layout_bg">
        <item name="android:background">@drawable/bg_up_rounded_light</item>
    </style>

    <style name="down_rounded_layout_bg">
        <item name="android:background">@drawable/bg_down_rounded_light</item>
    </style>

    ---> Text Views.

    <style name="big_text" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/archive</item>
        <item name="android:padding">@dimen/big_text_padding</item>
        <item name="android:textAlignment">center</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">@dimen/big_text</item>
        <item name="autoSizeMaxTextSize">@dimen/big_text_max</item>
        <item name="autoSizeMinTextSize">@dimen/big_text_min</item>
    </style>

    <style name="common_text" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/way_regular</item>
        <item name="android:padding">@dimen/common_text_padding</item>
        <item name="android:textAlignment">center</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/common_text</item>
        <item name="autoSizeMaxTextSize">@dimen/common_text_max</item>
        <item name="autoSizeMinTextSize">@dimen/common_text_min</item>
    </style>

    <style name="small_text" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/way_regular</item>
        <item name="android:padding">@dimen/small_text_padding</item>
        <item name="android:textAlignment">center</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="autoSizeMaxTextSize">@dimen/small_text_max</item>
        <item name="autoSizeMinTextSize">@dimen/small_text_min</item>
    </style>


    ------------------------ Same styles in all Themes ------------------------

    ---> Images and Icons.

    <style name="images">
        <item name="android:scaleType">fitCenter</item>
        <item name="contentDescription">@string/image</item>
        <item name="background">@android:color/transparent</item>
    </style>

    ---> Views.

    <style name="main_nav_view_text">
        <item name="android:textStyle">bold|italic</item>
    </style>

</resources>